<%- include("../partials/headera") %>
    <div class="row justify-content-center">
        <div class="col-lg-6 col-md-12" id="form">
            <div id="form1">
                <div class="text-center">
                    <img src="/logo_cong_website.png" alt="logo">
                </div>
                <h1 class="login"><%= language.__("verificationHeading") %> Congregation Planner</h1>
                <% if(error.length > 0){ %>
                    <div class="alert alert-danger" role="alert">
                        <%= error %>
                    </div>
                <% } %>
                <% if(success.length > 0){ %>
                    <div class="alert alert-success" role="alert">
                        <%= success %>
                    </div>
                <% } %>
                <% if(typeof congregation !== 'undefined'){ %>
                    <form action="/congregations/<%= congregation._id %>/verification" method="post" id="form4">
                        <div class="form-floating mb-3">
                            <input type="text" class="form-control" name="code" id="code" placeholder="123523" aria-label="Kod weryfikacyjny" aria-describedby="basic-addon1" required>
                            <label for="code" class="username">
                                <%= language.__("codeLabel") %>
                                
                            </label>
                            
                        </div>  
                        <input type="submit" value="<%= language.__("twoFactorButtonText") %>" class="btn button btn-green" id="send">
                    </form>
                    <form action="/congregations/<%= congregation._id %>/resend/verification" method="post">
                        <input type="submit" value="<%= language.__("resetText") %>" class="btn button btn-golden">
                    </form>
                <% } else { %>
                    <form action="/congregations/<%= congregation_id %>/resend/verification" method="post">
                        <input type="submit" value="<%= language.__("resetText") %>" class="btn button btn-golden">
                    </form>
                <% } %>
                
            </div>
           
        </div>
        
    </div>
<script>
    document.getElementById("form4").addEventListener("submit", () => {
        document.getElementById("send").setAttribute("disabled", "disabled");
        document.getElementById("send").value = `<%= language.__("verifyAction") %>`;
    })
</script>
</body>
</html>